{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["esnext"],
    "module": "NodeNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": false,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
  },
  "include": ["src/**/*", "express.d.ts"],
  "exclude": ["node_modules", "./src/__tests__", "./src/types"], 
}


